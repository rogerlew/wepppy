{
  "version": 1,
  "meta": {
    "description": "Maps VS Code workbench tokens to WEPPcloud UI variables. Edit `theme-mapping.json`, not this defaults file.",
    "updated": "2025-10-27",
    "defaults": {
      "themes_dir": "wepppy/weppcloud/themes",
      "output_dir": "wepppy/weppcloud/static/css/themes",
      "combined_file": "all-themes.css"
    },
    "notes": [
      "Tokens are evaluated in order. The first token found in a theme file is used.",
      "If no tokens resolve, the fallback value is applied.",
      "Per-theme overrides can force specific values or opt-in to extra CSS behaviours."
    ]
  },
  "themes": {
    "onedark": {
      "label": "OneDark",
      "source": "OneDark.json",
      "variant": "dark",
      "description": "Atom-inspired dark theme by akamud.",
      "options": {
        "flat_cards": true,
        "suppress_shadows": true
      },
      "overrides": {
        "--wc-shadow-sm": "0 6px 18px rgba(0, 0, 0, 0.35)",
        "--wc-shadow-md": "0 18px 48px rgba(0, 0, 0, 0.45)",
        "--wc-color-border": "#181A1F",
        "--wc-color-border-strong": "#0F1115"
      }
    },
    "ayu-dark": {
      "label": "Ayu Dark",
      "source": "ayu-dark.json",
      "variant": "dark",
      "description": "Ayu dark theme (flat cards).",
      "options": {
        "flat_cards": true
      },
      "overrides": {
        "--wc-color-border": "#171A1F",
        "--wc-color-border-strong": "#101217",
        "--wc-shadow-sm": "none",
        "--wc-shadow-md": "none",
        "--wc-color-on-primary": "#0b0e14"
      }
    },
    "ayu-dark-bordered": {
      "label": "Ayu Dark (Bordered)",
      "source": "ayu-dark-bordered.json",
      "variant": "dark",
      "description": "Ayu dark with bordered cards.",
      "options": {
        "suppress_shadows": true
      },
      "overrides": {
        "--wc-shadow-sm": "0 1px 2px rgba(15, 23, 42, 0.08)",
        "--wc-shadow-md": "0 6px 18px rgba(15, 23, 42, 0.12)",
        "--wc-color-on-primary": "#0d1017"
      }
    },
    "ayu-light": {
      "label": "Ayu Light",
      "source": "ayu-light.json",
      "variant": "light",
      "description": "Ayu light theme.",
      "options": {
        "flat_cards": false
      },
      "overrides": {
        "--wc-shadow-sm": "0 1px 2px rgba(15, 23, 42, 0.08)",
        "--wc-shadow-md": "0 6px 18px rgba(15, 23, 42, 0.12)",
        "--wc-color-on-primary": "#1f2328"
      }
    },
    "ayu-light-bordered": {
      "label": "Ayu Light (Bordered)",
      "source": "ayu-light-bordered.json",
      "variant": "light",
      "description": "Ayu light with bordered cards.",
      "options": {
        "suppress_shadows": true
      },
      "overrides": {
        "--wc-shadow-sm": "0 1px 2px rgba(15, 23, 42, 0.08)",
        "--wc-shadow-md": "0 6px 18px rgba(15, 23, 42, 0.12)",
        "--wc-color-on-primary": "#1f2328"
      }
    },
    "ayu-mirage": {
      "label": "Ayu Mirage",
      "source": "ayu-mirage.json",
      "variant": "dark",
      "description": "Ayu mirage (mid-contrast) theme.",
      "options": {
        "flat_cards": true
      },
      "overrides": {
        "--wc-shadow-sm": "none",
        "--wc-shadow-md": "none",
        "--wc-color-on-primary": "#1f2430"
      }
    },
    "ayu-mirage-bordered": {
      "label": "Ayu Mirage (Bordered)",
      "source": "ayu-mirage-bordered.json",
      "variant": "dark",
      "description": "Ayu mirage theme with bordered cards.",
      "options": {
        "suppress_shadows": true
      },
      "overrides": {
        "--wc-shadow-sm": "0 1px 2px rgba(15, 23, 42, 0.08)",
        "--wc-shadow-md": "0 6px 18px rgba(15, 23, 42, 0.12)",
        "--wc-color-on-primary": "#1c212b"
      }
    },
    "cursor-dark-anysphere": {
      "label": "Cursor Dark (Anysphere)",
      "source": "Cursor-Dark-Anysphere-color-theme.json",
      "variant": "dark",
      "description": "Cursor Anysphere dark theme.",
      "options": {
        "flat_cards": true
      },
      "overrides": {
        "--wc-shadow-sm": "none",
        "--wc-shadow-md": "none",
        "--wc-color-on-primary": "#D8DEE9"
      }
    },
    "cursor-dark-midnight": {
      "label": "Cursor Dark (Midnight)",
      "source": "Cursor-Dark-Midnight-color-theme.json",
      "variant": "dark",
      "description": "Cursor midnight dark theme.",
      "options": {
        "flat_cards": true
      },
      "overrides": {
        "--wc-shadow-sm": "none",
        "--wc-shadow-md": "none",
        "--wc-color-primary": "#8FBCBB",
        "--wc-color-primary-dark": "#6DA1A6",
        "--wc-color-on-primary": "#1E2127"
      }
    },
    "cursor-dark-high-contrast": {
      "label": "Cursor Dark (High Contrast)",
      "source": "Cursor-Dark-High-Contrast-color-theme.json",
      "variant": "dark",
      "description": "Cursor high-contrast dark theme.",
      "options": {
        "flat_cards": true
      },
      "overrides": {
        "--wc-shadow-sm": "none",
        "--wc-shadow-md": "none",
        "--wc-color-accent": "#88C0D0",
        "--wc-color-accent-soft": "rgba(136, 192, 208, 0.22)",
        "--wc-color-primary": "#88C0D0",
        "--wc-color-primary-dark": "#6FA7B8",
        "--wc-color-on-primary": "#0A0A0A",
        "--wc-color-link": "#88C0D0",
        "--wc-color-link-hover": "#ECEFF4"
      }
    },
    "cursor-light": {
      "label": "Cursor Light",
      "source": "Cursor-Light-color-theme.json",
      "variant": "light",
      "description": "Cursor light theme.",
      "options": {
        "suppress_shadows": true
      },
      "overrides": {
        "--wc-shadow-sm": "0 1px 2px rgba(15, 23, 42, 0.08)",
        "--wc-shadow-md": "0 6px 18px rgba(15, 23, 42, 0.12)",
        "--wc-color-primary": "#3173A7",
        "--wc-color-primary-dark": "#245C85",
        "--wc-color-on-primary": "#FCFCFC"
      }
    },
    "dark-modern": {
      "label": "Dark Modern",
      "source": "dark_modern.json",
      "variant": "dark",
      "description": "VS Code Dark Modern theme.",
      "options": {
        "flat_cards": true
      },
      "overrides": {
        "--wc-shadow-sm": "none",
        "--wc-shadow-md": "none"
      }
    }
  },
  "variables": {
    "--wc-color-page": {
      "description": "Body background behind control shells and layout chrome.",
      "fallback": "#f6f8fa",
      "tokens": [
        "titleBar.inactiveBackground",
        "sideBar.background",
        "editorGroupHeader.tabsBackground",
        "editor.background"
      ]
    },
    "--wc-color-surface": {
      "description": "Primary surface color for cards, panels, and control shells.",
      "fallback": "#ffffff",
      "tokens": [
        "editor.background",
        "titleBar.activeBackground",
        "sideBar.background"
      ]
    },
    "--wc-color-surface-alt": {
      "description": "Alternate surface color used for secondary panels and tables.",
      "fallback": "#eef1f4",
      "tokens": [
        "editorGroup.background",
        "statusBar.background",
        "titleBar.activeBackground",
        "sideBarSectionHeader.background"
      ]
    },
    "--wc-color-border": {
      "description": "Default border color used throughout the UI.",
      "fallback": "#d0d7de",
      "tokens": [
        "dropdown.border",
        "editorGroup.border",
        "tab.border"
      ]
    },
    "--wc-color-border-strong": {
      "description": "Stronger border color for separators and hover states.",
      "fallback": "#afb8c1",
      "tokens": [
        "editorWidget.border",
        "pickerGroup.border",
        "statusBarItem.hoverBackground"
      ]
    },
    "--wc-color-text": {
      "description": "Default foreground text color.",
      "fallback": "#1f2328",
      "tokens": [
        "editor.foreground",
        "activityBar.foreground",
        "list.activeSelectionForeground"
      ]
    },
    "--wc-color-text-muted": {
      "description": "Muted foreground text color for helper copy.",
      "fallback": "#4b5563",
      "tokens": [
        "editorLineNumber.foreground",
        "list.inactiveSelectionForeground",
        "editorInlayHint.foreground"
      ]
    },
    "--wc-color-link": {
      "description": "Interactive link color.",
      "fallback": "#1f2328",
      "tokens": [
        "textLink.foreground",
        "focusBorder",
        "activityBarBadge.background"
      ]
    },
    "--wc-color-link-hover": {
      "description": "Link hover/active color.",
      "fallback": "#111418",
      "tokens": [
        {
          "token": "textLink.activeForeground"
        },
        {
          "token": "focusBorder"
        },
        {
          "token": "activityBarBadge.background",
          "darken": 0.1
        }
      ]
    },
    "--wc-color-accent": {
      "description": "Primary accent color for buttons and highlights.",
      "fallback": "#24292f",
      "tokens": [
        "focusBorder",
        "activityBarBadge.background",
        "extensionButton.prominentBackground"
      ]
    },
    "--wc-color-accent-soft": {
      "description": "Soft accent background used for subtle emphasis.",
      "fallback": "#e6e8eb",
      "tokens": [
        {
          "token": "focusBorder",
          "alpha": 0.18
        },
        {
          "token": "activityBarBadge.background",
          "alpha": 0.18
        }
      ]
    },
    "--wc-color-positive": {
      "description": "Success/positive accent color.",
      "fallback": "#1a7f37",
      "tokens": [
        "statusBarItem.hoverBackground",
        "list.highlightForeground"
      ]
    },
    "--wc-color-positive-soft": {
      "description": "Soft positive background for alerts.",
      "fallback": "#e6f4ea",
      "tokens": [
        {
          "token": "statusBarItem.hoverBackground",
          "alpha": 0.18
        }
      ]
    },
    "--wc-color-attention": {
      "description": "Warning/attention accent color.",
      "fallback": "#9a6700",
      "tokens": [
        "badge.background",
        "list.hoverBackground"
      ]
    },
    "--wc-color-attention-soft": {
      "description": "Soft attention background for alerts.",
      "fallback": "#fceec7",
      "tokens": [
        {
          "token": "badge.background",
          "alpha": 0.22
        }
      ]
    },
    "--wc-color-critical": {
      "description": "Error/critical accent color.",
      "fallback": "#cf222e",
      "tokens": [
        "statusBar.debuggingForeground",
        "activityBarBadge.background"
      ]
    },
    "--wc-color-critical-soft": {
      "description": "Soft error background for alerts.",
      "fallback": "#fce0e2",
      "tokens": [
        {
          "token": "statusBar.debuggingForeground",
          "alpha": 0.2
        }
      ]
    },
    "--wc-color-primary": {
      "description": "Primary link/interaction color.",
      "fallback": "#24292f",
      "tokens": [
        "focusBorder",
        "activityBarBadge.background"
      ]
    },
    "--wc-color-primary-dark": {
      "description": "Stronger variant of the primary color for hover states.",
      "fallback": "#111418",
      "tokens": [
        {
          "token": "focusBorder",
          "darken": 0.2
        },
        {
          "token": "activityBarBadge.background",
          "darken": 0.2
        }
      ]
    },
    "--wc-color-on-primary": {
      "description": "Foreground color used atop primary accents.",
      "fallback": "#ffffff",
      "tokens": [
        "button.foreground",
        "editorSuggestWidget.foreground"
      ]
    },
    "--wc-shadow-sm": {
      "description": "Small drop shadow token.",
      "fallback": "0 1px 2px rgba(15, 23, 42, 0.08)",
      "tokens": []
    },
    "--wc-shadow-md": {
      "description": "Medium drop shadow token.",
      "fallback": "0 6px 18px rgba(15, 23, 42, 0.12)",
      "tokens": []
    }
  }
}
