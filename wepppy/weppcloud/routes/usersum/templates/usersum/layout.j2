<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title or 'Usersum' }}</title>
    <link rel="stylesheet" href="{{ static_url('css/ui-foundation.css') }}">
    <link rel="stylesheet" href="{{ static_url('css/themes/all-themes.css') }}">
    <link rel="stylesheet" href="{{ static_url('css/markdown-theme.css') }}">
    <script src="{{ static_url('js/controllers.js') }}" defer></script>
    <style>
      body {
        margin: 0;
        background: var(--wc-color-page);
        color: var(--wc-color-text);
        font-family: var(--wc-font-sans);
      }

      .markdown-body {
        box-sizing: border-box;
        min-width: 200px;
        width: 100%;
        max-width: 980px;
        margin: 0 auto;
        padding: 45px;
      }

      @media (max-width: 767.98px) {
        .markdown-body {
          padding: 15px;
        }
      }
    </style>
  </head>
  <body>
    <article class="markdown-body">
      {% block body %}{% endblock %}
    </article>
  </body>
</html>
